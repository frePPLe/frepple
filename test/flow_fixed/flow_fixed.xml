        </flows>
        <suboperations>
          <suboperation>
            <operation name="6. make end item - alternate 1" xsi:type="operation_fixed_time" duration="P2D">
              <flows>
                <flow xsi:type="flow_end">
                  <buffer name="6. end item"/>
