  </buffers>
  <demands>
    <demand name="5. order 1">
      <quantity>10</quantity>
      <due>2013-01-20T00:00:00</due>
      <priority>11</priority>
      <item name="5. end item"/>
      <operation name="5. deliver end item" xsi:type="operation_fixed_time">
          <flows>
