      <operation name="5. deliver end item"/>
    </demand>
    <demand name="5. order 3">
      <quantity>7</quantity>
      <due>2013-02-20T00:00:00</due>
      <priority>13</priority>
      <item name="5. end item"/>
      <operation name="5. deliver end item"/>
